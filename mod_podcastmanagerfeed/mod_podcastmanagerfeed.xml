<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="2.5" client="site" method="upgrade">
	<name>mod_podcastmanagerfeed</name>
	<creationDate>##DATE##</creationDate>
	<author>Michael Babker</author>
	<copyright>(C) 2011-2015 Michael Babker</copyright>
	<authorEmail>mbabker@flbab.com</authorEmail>
	<authorUrl>https://www.babdev.com</authorUrl>
	<version>##VERSION##</version>
	<license>GNU/GPL Version 2 or later</license>
	<description>MOD_PODCASTMANAGERFEED_XML_DESCRIPTION</description>
	<scriptfile>script.php</scriptfile>
	<files>
		<folder>language</folder>
		<folder>tmpl</folder>
		<filename module="mod_podcastmanagerfeed">mod_podcastmanagerfeed.php</filename>
		<filename>helper.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic" addfieldpath="/administrator/components/com_podcastmanager/models/fields">
				<field name="feed" type="feedname" class="inputbox" label="MOD_PODCASTMANAGERFEED_FIELD_FEEDNAME_LABEL" description="MOD_PODCASTMANAGERFEED_FIELD_FEEDNAME_DESCRIPTION" size="1">
					<option value="">JALL</option>
				</field>
				<field name="count" type="number" default="5" filter="integer" label="MOD_PODCASTMANAGERFEED_FIELD_COUNT_LABEL" description="MOD_PODCASTMANAGERFEED_FIELD_COUNT_DESCRIPTION" />
				<field name="description" type="radio" filter="intval" validate="options" class="btn-group btn-group-yesno" default="1" label="MOD_PODCASTMANAGERFEED_FIELD_DESCRIPTION_LABEL" description="MOD_PODCASTMANAGER_FIELD_DESCRIPTION_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="author" type="radio" filter="intval" validate="options" class="btn-group btn-group-yesno" default="1" label="MOD_PODCASTMANAGERFEED_FIELD_AUTHOR_LABEL" description="MOD_PODCASTMANAGER_FIELD_AUTHOR_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="created" type="radio" filter="intval" validate="options" class="btn-group btn-group-yesno" default="1" label="MOD_PODCASTMANAGERFEED_FIELD_CREATED_LABEL" description="MOD_PODCASTMANAGER_FIELD_CREATED_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="show_item_player" type="radio" filter="intval" validate="options" class="btn-group btn-group-yesno" default="0" label="MOD_PODCASTMANAGERFEED_FIELD_SHOW_ITEM_PLAYER_LABEL" description="MOD_PODCASTMANAGERFEED_FIELD_SHOW_ITEM_PLAYER_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
			<fieldset name="ordering" label="MOD_PODCASTMANAGERFEED_FIELD_GROUP_ORDERING_LABEL">
				<field name="item_ordering" type="list" validate="options" default="a.publish_up" label="MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_LABEL" description="MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_DESCRIPTION">
					<option value="a.created">MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_OPTION_CREATED</option>
					<option value="a.publish_up">MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_OPTION_PUBLISH_UP</option>
				</field>
				<field name="item_ordering_direction" type="list" validate="options" default="ASC" label="MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_DIRECTION_LABEL" description="MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_DIRECTION_DESCRIPTION">
					<option value="ASC">MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_DIRECTION_OPTION_ASCENDING</option>
					<option value="DESC">MOD_PODCASTMANAGERFEED_FIELD_ITEM_ORDERING_DIRECTION_OPTION_DESCENDING</option>
				</field>
			</fieldset>
			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC" />
				<field name="moduleclass_sfx" type="textarea" rows="3" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC" />
				<field name="cache" type="radio" filter="intval" validate="options" class="btn-group btn-group-yesno" default="0" label="MOD_PODCASTMANAGER_FIELD_CACHE_LABEL" description="MOD_PODCASTMANAGER_FIELD_CACHE_DESCRIPTION">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="cache_time" type="number" filter="integer" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC" showon="cache:1" />
				<field name="cachemode" type="hidden" default="static" />
			</fieldset>
		</fields>
	</config>
</extension>
