<?xml version="1.0" encoding="UTF-8"?>
<extension type="file" version="1.7" method="upgrade">
	<name>files_podcastmanager_minima</name>
	<creationDate>March 2011</creationDate>
	<author>Michael Babker</author>
	<copyright>(C) 2011 Michael Babker</copyright>
	<authorEmail>mbabker@flbab.com</authorEmail>
	<authorUrl>http://www.flbab.com</authorUrl>
	<version>1.8 Alpha</version>
	<license>GNU/GPL Version 2 or later</license>
	<description>HTML overrides for the Podcast Manager extensions for the Minima template</description>
	<fileset>
		<files folder="com_podcastmanager" target="administrator/templates/minima/html/com_podcastmanager">
			<folder>cpanel</folder>
			<folder>feed</folder>
			<folder>feeds</folder>
			<folder>podcast</folder>
			<folder>podcasts</folder>
		</files>
		<files folder="com_podcastmedia" target="administrator/templates/minima/html/com_podcastmedia">
			<folder>media</folder>
		</files>
	</fileset>
	<updateservers>
		<server type="extension" name="Podcast Manager Minima HTML Overrides Updates" priority="2">http://www.flbab.com/updates/files_podman_minima.xml</server>
	</updateservers>
</extension>
