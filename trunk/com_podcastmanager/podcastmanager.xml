<extension type="component" version="1.6" method="upgrade">
	<name>com_podcastmanager</name>
	<creationDate>January 2011</creationDate>
	<author>Michael Babker</author>
	<copyright>(C) 2011 Michael Babker</copyright>
	<authorEmail>mbabker@flbab.com</authorEmail>
	<authorUrl>http://www.flbab.com</authorUrl>
	<version>1.6 Alpha</version>
	<license>GNU/GPL</license>
	<description>COM_PODCASTMANAGER_XML_DESCRIPTION</description>
	<menu link="option=com_podcastmanager">COM_PODCASTMANAGER</menu>
	<files folder="site">
		<filename>index.html</filename>
		<filename>podcastmanager.php</filename>
		<folder>media</folder>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.mysql.sql</file>
		</sql>
	</install>
	<administration>
		<menu>COM_PODCASTMANAGER</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_podcastmanager&amp;view=files" view="files" alt="Podcast-Manager/Files">COM_PODCASTMANAGER_SUBMENU_FILES</menu>
			<menu link="option=com_podcastmanager&amp;view=info" view="info" alt="Podcast-Manager/Info">COM_PODCASTMANAGER_SUBMENU_INFO</menu>
		</submenu>
		<languages folder="admin/languages">
			<language tag="en-GB">en-GB.com_podcastmanager.ini</language>
			<language tag="en-GB">en-GB.com_podcastmanager.sys.ini</language>
		</languages>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>alerts.css</filename>
			<filename>alerts_on.css</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>LICENSE</filename>
			<filename>index.html</filename>
			<filename>install.mysql.sql</filename>
			<filename>podcastmanager.php</filename>
			<folder>getid3</folder>
			<folder>helpers</folder>
			<folder>models</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
	</administration>
</extension>