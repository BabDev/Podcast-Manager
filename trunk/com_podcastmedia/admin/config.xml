<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component">
		<field
			name="upload_extensions"
			type="text"
			size="50"
			default="mp3,MP3"
			label="COM_PODCASTMEDIA_FIELD_LEGAL_EXTENSIONS_LABEL"
			description="COM_PODCASTMEDIA_FIELD_LEGAL_EXTENSIONS_DESC" />
		<field
			name="upload_maxsize"
			type="text"
			size="50"
			default="10"
			label="COM_PODCASTMEDIA_FIELD_MAXIMUM_SIZE_LABEL"
			description="COM_PODCASTMEDIA_FIELD_MAXIMUM_SIZE_DESC" />
		<field
			name="file_path"
			type="text"
			size="50"
			default="media/com_podcastmanager"
			label="COM_PODCASTMEDIA_FIELD_PATH_FILE_FOLDER_LABEL"
			description="COM_PODCASTMEDIA_FIELD_PATH_FILE_FOLDER_DESC" />
		<field
			name="image_path"
			type="text"
			size="50"
			default="media/com_podcastmanager"
			label="COM_PODCASTMEDIA_FIELD_PATH_IMAGE_FOLDER_LABEL"
			description="COM_PODCASTMEDIA_FIELD_PATH_IAMGE_FOLDER_DESC" />
		<field
			name="restrict_uploads"
			type="radio"
			default="1"
			label="COM_PODCASTMEDIA_FIELD_RESTRICT_UPLOADS_LABEL"
			description="COM_PODCASTMEDIA_FIELD_RESTRICT_UPLOADS_DESC">
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		<field
			name="check_mime"
			type="radio"
			default="1"
			label="COM_PODCASTMEDIA_FIELD_CHECK_MIME_LABEL"
			description="COM_PODCASTMEDIA_FIELD_CHECK_MIME_DESC">
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>
		<field
			name="image_extensions"
			type="text"
			size="50"
			default="bmp,gif,jpg,png"
			label="COM_PODCASTMEDIA_FIELD_LEGAL_IMAGE_EXTENSIONS_LABEL"
			description="COM_PODCASTMEDIA_FIELD_LEGAL_IMAGE_EXTENSIONS_DESC" />
		<field
			name="ignore_extensions"
			type="text"
			size="50"
			label="COM_PODCASTMEDIA_FIELD_IGNORED_EXTENSIONS_LABEL"
			description="COM_PODCASTMEDIA_FIELD_IGNORED_EXTENSIONS_DESC" />
		<field
			name="upload_mime"
			type="text"
			size="50"
			default="audio/mpeg"
			label="COM_PODCASTMEDIA_FIELD_LEGAL_MIME_TYPES_LABEL"
			description="COM_PODCASTMEDIA_FIELD_LEGAL_MIME_TYPES_DESC" />
		<field
			name="upload_mime_illegal"
			type="text"
			size="50"
			default="text/html"
			label="COM_PODCASTMEDIA_FIELD_ILLEGAL_MIME_TYPES_LABEL"
			description="COM_PODCASTMEDIA_FIELD_ILLEGAL_MIME_TYPES_DESC" />
		<field
			name="enable_flash"
			type="radio"
			default="0"
			label="COM_PODCASTMEDIA_FIELD_ENABLE_FLASH_UPLOADER_LABEL"
			description="COM_PODCASTMEDIA_FIELD_ENABLE_FLASH_UPLOADER_DESC">
			<option
				value="0">JNO</option>
			<option
				value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
		>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			filter="rules"
			validate="rules"
			component="com_podcastmanager"
			section="component">
		</field>
	</fieldset>
</config>
