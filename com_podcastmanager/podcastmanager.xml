<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="1.6" method="upgrade">
	<name>com_podcastmanager</name>
	<creationDate>January 2011</creationDate>
	<author>Michael Babker</author>
	<copyright>(C) 2011 Michael Babker</copyright>
	<authorEmail>mbabker@flbab.com</authorEmail>
	<authorUrl>http://www.flbab.com</authorUrl>
	<version>1.7 Alpha</version>
	<license>GNU/GPL Version 2 or later</license>
	<description>COM_PODCASTMANAGER_XML_DESCRIPTION</description>
	<menu link="option=com_podcastmanager">COM_PODCASTMANAGER</menu>
	<files folder="site">
		<filename>controller.php</filename>
		<filename>index.html</filename>
		<filename>podcastmanager.php</filename>
		<filename>router.php</filename>
		<folder>models</folder>
		<folder>views</folder>
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">sql/install.mysql.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">sql/uninstall.mysql.sql</file>
		</sql>
	</uninstall>
	<languages folder="site/language">
		<language tag="en-GB">en-GB/en-GB.com_podcastmanager.ini</language>
		<language tag="en-GB">en-GB/en-GB.com_podcastmanager.sys.ini</language>
	</languages>
	<media destination="com_podcastmanager">
		<filename>index.html</filename>
	</media>
	<administration>
		<files folder="admin">
			<filename>access.xml</filename>
			<filename>config.xml</filename>
			<filename>controller.php</filename>
			<filename>index.html</filename>
			<filename>podcastmanager.php</filename>
			<folder>controllers</folder>
			<folder>helpers</folder>
			<folder>media</folder>
			<folder>models</folder>
			<folder>sql</folder>
			<folder>tables</folder>
			<folder>views</folder>
		</files>
		<languages folder="admin/language">
			<language tag="en-GB">en-GB/en-GB.com_podcastmanager.ini</language>
			<language tag="en-GB">en-GB/en-GB.com_podcastmanager.sys.ini</language>
		</languages>
		<menu img="../administrator/components/com_podcastmanager/media/images/icons/icon-16-podcastmanager.png">COM_PODCASTMANAGER</menu>
		<submenu>
			<!--
				Note that all & must be escaped to &amp; for the file to be valid
				XML and be parsed by the installer
			-->
			<menu link="option=com_podcastmanager&amp;view=feeds" view="feeds" alt="Podcast-Manager/Feeds" img="../administrator/components/com_podcastmanager/media/images/icons/icon-16-podcastmanager.png">COM_PODCASTMANAGER_SUBMENU_FEEDS</menu>
			<menu link="option=com_podcastmanager&amp;view=podcasts" view="podcasts" alt="Podcast-Manager/Podcasts" img="../administrator/components/com_podcastmanager/media/images/icons/icon-16-podcastmanager.png">COM_PODCASTMANAGER_SUBMENU_PODCASTS</menu>
			<menu link="option=com_podcastmanager&amp;view=info" view="info" alt="Podcast-Manager/Info" img="../administrator/components/com_podcastmanager/media/images/icons/icon-16-podcastmanager.png">COM_PODCASTMANAGER_SUBMENU_INFO</menu>
			<menu link="option=com_podcastmedia&amp;view=media" view="media" alt="Podcast-Media/Media" img="../administrator/components/com_podcastmanager/media/images/icons/icon-16-podcastmanager.png">COM_PODCASTMANAGER_SUBMENU_FILES</menu>
		</submenu>
	</administration>
</extension>