<?xml version="1.0" encoding="utf-8"?>
<config>
	<fieldset name="component" label="COM_PODCASTMANAGER_FIELDSET_CONFIG_OPTIONS_LABEL" description="COM_PODCASTMANAGER_FIELDSET_CONFIG_OPTIONS_DESCRIPTION">
		<field name="save_history" type="radio" default="0" filter="intval" validate="options" class="btn-group btn-group-yesno" label="JGLOBAL_SAVE_HISTORY_OPTIONS_LABEL" description="JGLOBAL_SAVE_HISTORY_OPTIONS_DESC">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="history_limit" type="number" filter="integer" default="5" label="JGLOBAL_HISTORY_LIMIT_OPTIONS_LABEL" description="JGLOBAL_HISTORY_LIMIT_OPTIONS_DESC" showon="save_history:1" />
		<field name="linkhandling" type="list" default="player" validate="options" label="COM_PODCASTMANAGER_CONFIG_FIELD_LINKHANDLING_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_LINKHANDLING_DESCRIPTION">
			<option value="custom">COM_PODCASTMANAGER_CONFIG_FIELD_LINKHANDLING_OPTION_CUSTOM</option>
			<option value="link">COM_PODCASTMANAGER_CONFIG_FIELD_LINKHANDLING_OPTION_LINK</option>
			<option value="player">COM_PODCASTMANAGER_CONFIG_FIELD_LINKHANDLING_OPTION_PLAYER</option>
		</field>
		<field name="customcode" type="textarea" rows="5" cols="30" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_CUSTOMCODE_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_CUSTOMCODE_DESCRIPTION" showon="linkhandling:custom" />
		<field name="playerwidth" type="number" filter="integer" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_PLAYERWIDTH_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_PLAYERWIDTH_DESCRIPTION" showon="linkhandling:player" />
		<field name="playerheight" type="number" filter="integer" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_PLAYERHEIGHT_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_PLAYERHEIGHT_DESCRIPTION" showon="linkhandling:player" />
		<field name="videoheight" type="number" filter="integer" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_VIDEOHEIGHT_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_VIDEOHEIGHT_DESCRIPTION" showon="linkhandling:player" />
		<field name="playerstyle" type="text" filter="safehtml" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_PLAYERSTYLE_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_PLAYERSTYLE_DESCRIPTION" showon="linkhandling:player" />
		<field name="linktitle" type="text" default="Listen Now!" label="COM_PODCASTMANAGER_CONFIG_FIELD_LINKTITLE_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_LINKTITLE_DESCRIPTION" />
		<field name="tracking" type="list" validate="options" default="none" label="COM_PODCASTMANAGER_CONFIG_TRACKING_LABEL" description="COM_PODCASTMANAGER_CONFIG_TRACKING_DESCRIPTION" >
			<option value="none">COM_PODCASTMANAGER_CONFIG_OPTION_NONE</option>
			<option value="blubrry">COM_PODCASTMANAGER_CONFIG_TRACKING_OPTION_BLUBRRY</option>
			<option value="podtrac">COM_PODCASTMANAGER_CONFIG_TRACKING_OPTION_PODTRAC</option>
		</field>
		<field name="trackname" type="text" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_TRACKNAME_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_TRACKNAME_DESCRIPTION" showon="tracking:blubrry,podtrac" />
		<field name="minstability" type="list" validate="options" default="alpha" label="COM_PODCASTMANAGER_CONFIG_LIVEUPDATE_MINSTABILITY_LABEL" description="COM_PODCASTMANAGER_CONFIG_LIVEUPDATE_MINSTABILITY_DESCRIPTION" >
			<option value="alpha">COM_PODCASTMANAGER_CONFIG_LIVEUPDATE_STABILITY_ALPHA</option>
			<option value="beta">COM_PODCASTMANAGER_CONFIG_LIVEUPDATE_STABILITY_BETA</option>
			<option value="rc">COM_PODCASTMANAGER_CONFIG_LIVEUPDATE_STABILITY_RC</option>
			<option value="stable">COM_PODCASTMANAGER_CONFIG_LIVEUPDATE_STABILITY_STABLE</option>
		</field>
		<field name="enableLogging" type="radio" default="0" filter="intval" validate="options" class="btn-group btn-group-yesno" label="COM_PODCASTMANAGER_CONFIG_FIELD_ENABLELOGGING_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ENABLELOGGING_DESCRIPTION">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
	</fieldset>
	<fieldset name="permissions" label="JCONFIG_PERMISSIONS_LABEL" description="JCONFIG_PERMISSIONS_DESC">
		<field name="rules" type="rules" filter="rules" validate="rules" class="inputbox" label="JCONFIG_PERMISSIONS_LABEL" component="com_podcastmanager" section="component" />
	</fieldset>
</config>
