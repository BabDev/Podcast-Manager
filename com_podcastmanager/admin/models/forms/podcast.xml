<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_podcastmanager/models/fields">
		<field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		<field name="asset_id" type="hidden" filter="unset" />
		<field name="filename" type="podcastmedia" hide_none="1" label="COM_PODCASTMANAGER_FIELD_FILENAME_LABEL" description="COM_PODCASTMANAGER_FIELD_FILENAME_DESCRIPTION" required="true" />
		<field name="title" type="text" class="input-xxlarge input-large-text" label="COM_PODCASTMANAGER_FIELD_TITLE_LABEL" description="COM_PODCASTMANAGER_FIELD_TITLE_DESCRIPTION" size="30" required="true" />
		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" hint="JFIELD_ALIAS_PLACEHOLDER" size="40" />
		<field name="published" type="list" class="chzn-color-state" filter="intval" label="JSTATUS" description="COM_PODCASTMANAGER_FIELD_PUBLISHED_DESCRIPTION" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASH</option>
		</field>
		<field name="feedname" type="feedname" filter="intval" label="COM_PODCASTMANAGER_FIELD_FEEDNAME_LABEL" description="COM_PODCASTMANAGER_FIELD_FEEDNAME_DESCRIPTION" size="1" required="true">
			<option value="0">JNONE</option>
		</field>
		<field name="created" type="calendar" label="COM_PODCASTMANAGER_FIELD_CREATED_LABEL" description="COM_PODCASTMANAGER_FIELD_CREATED_DESCRIPTION" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" />
		<field name="modified" type="calendar" class="readonly" label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_PODCASTMANAGER_FIELD_MODIFIED_DESCRIPTION" size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<field name="modified_by" type="user" class="readonly" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" readonly="true" filter="unset" />
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
		<field name="publish_up" type="calendar" label="COM_PODCASTMANAGER_FIELD_PUBLISH_UP_LABEL" description="COM_PODCASTMANAGER_FIELD_PUBLISH_UP_DESCRIPTION" format="%Y-%m-%d %H:%M:%S" size="22" filter="user_utc" />
		<field name="itAuthor" type="text" label="COM_PODCASTMANAGER_FIELD_ITAUTHOR_LABEL" description="COM_PODCASTMANAGER_FIELD_ITAUTHOR_DESCRIPTION" size="30" required="true" />
		<field name="itBlock" type="radio" filter="intval" class="btn-group btn-group-yesno" label="COM_PODCASTMANAGER_FIELD_ITBLOCK_LABEL" description="COM_PODCASTMANAGER_FIELD_ITBLOCK_DESCRIPTION" default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="itDuration" type="text" label="COM_PODCASTMANAGER_FIELD_ITDURATION_LABEL" description="COM_PODCASTMANAGER_FIELD_ITDURATION_DESCRIPTION" size="30" />
		<field name="itExplicit" type="radio" filter="intval" class="btn-group" label="COM_PODCASTMANAGER_FIELD_ITEXPLICIT_LABEL" description="COM_PODCASTMANAGER_FIELD_ITEXPLICIT_DESCRIPTION" default="0">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
			<option value="2">COM_PODCASTMANAGER_FIELD_ITEXPLICIT_OPTION_CLEAN</option>
		</field>
		<field name="itImage" type="media" hide_none="1" label="COM_PODCASTMANAGER_CONFIG_FIELD_ITIMAGE_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITIMAGE_DESCRIPTION" />
		<field name="itKeywords" type="text" label="COM_PODCASTMANAGER_FIELD_ITKEYWORDS_LABEL" description="COM_PODCASTMANAGER_FIELD_ITKEYWORDS_DESCRIPTION" size="30" />
		<field name="itSubtitle" type="text" label="COM_PODCASTMANAGER_FIELD_ITSUBTITLE_LABEL" description="COM_PODCASTMANAGER_FIELD_ITSUBTITLE_DESCRIPTION" size="30" />
		<field name="itSummary" type="textarea" filter="safehtml" rows="3" cols="40" label="COM_PODCASTMANAGER_FIELD_ITSUMMARY_LABEL" description="COM_PODCASTMANAGER_FIELD_ITSUMMARY_DESCRIPTION" />
		<field name="mime" type="text" label="COM_PODCASTMANAGER_FIELD_MIMETYPE_LABEL" description="COM_PODCASTMANAGER_FIELD_MIMETYPE_DESCRIPTION" size="30" default="audio/mpeg" />
		<field name="tags" type="tag" label="JTAG" description="JTAG_DESC" class="span12" multiple="true" />
		<field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="span12" size="45" />
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="COM_PODCASTMANAGER_FIELD_LANGUAGE_DESCRIPTION">
			<option value="*">JALL</option>
		</field>
	</fieldset>
</form>
