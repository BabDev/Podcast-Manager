<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset addfieldpath="/administrator/components/com_podcastmanager/models/fields">
		<field name="id" type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL" description="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true" />
		<field name="asset_id" type="hidden" filter="unset" />
		<field name="name" type="text" filter="safehtml" label="COM_PODCASTMANAGER_FEED_FIELD_NAME_LABEL" description="COM_PODCASTMANAGER_FEED_FIELD_NAME_DESCRIPTION" size="30" required="true" />
		<field name="alias" type="text" label="JFIELD_ALIAS_LABEL" description="JFIELD_ALIAS_DESC" size="45" labelclass="control-label" />
		<field name="subtitle" type="text" filter="safehtml" label="COM_PODCASTMANAGER_FIELD_ITSUBTITLE_LABEL" description="COM_PODCASTMANAGER_FIELD_ITSUBTITLE_DESCRIPTION" size="30" />
		<field name="description" type="textarea" filter="safehtml" label="COM_PODCASTMANAGER_FEED_FIELD_DESCRIPTION_LABEL" description="COM_PODCASTMANAGER_FEED_FIELD_DESCRIPTION_DESCRIPTION" rows="3" cols="40" />
		<field name="bp_position" type="list" filter="intval" label="COM_PODCASTMANAGER_FEED_FIELD_BP_POSITION_LABEL" description="COM_PODCASTMANAGER_FEED_FIELD_BP_POSITION_DESCRIPTION" size="1" default="0">
			<option value="0">JNONE</option>
			<option value="1">COM_PODCASTMANAGER_OPTION_TOP</option>
			<option value="2">COM_PODCASTMANAGER_OPTION_BOTTOM</option>
		</field>
		<field name="boilerplate" type="textarea" filter="safehtml" label="COM_PODCASTMANAGER_FEED_FIELD_BOILERPLATE_LABEL" description="COM_PODCASTMANAGER_FEED_FIELD_BOILERPLATE_DESCRIPTION" rows="3" cols="40" />
		<field name="copyright" type="text" filter="safehtml" label="COM_PODCASTMANAGER_FEED_FIELD_COPYRIGHT_LABEL" description="COM_PODCASTMANAGER_FEED_FIELD_COPYRIGHT_DESCRIPTION" size="30" />
		<field name="owneremail" type="text" size="30" filter="safehtml" label="COM_PODCASTMANAGER_CONFIG_FIELD_ITOWNEREMAIL_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITOWNEREMAIL_DESCRIPTION" />
		<field name="ownername" type="text" size="30" filter="safehtml" label="COM_PODCASTMANAGER_CONFIG_FIELD_ITOWNERNAME_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITOWNERNAME_DESCRIPTION" />
		<field name="keywords" type="text" size="30" filter="safehtml" label="COM_PODCASTMANAGER_FIELD_ITKEYWORDS_LABEL" description="COM_PODCASTMANAGER_FIELD_ITKEYWORDS_DESCRIPTION" />
		<field name="author" type="text" size="30" filter="safehtml" label="COM_PODCASTMANAGER_FIELD_ITAUTHOR_LABEL" description="COM_PODCASTMANAGER_FIELD_ITAUTHOR_DESCRIPTION" />
		<field name="newFeed" type="url" filter="url" label="COM_PODCASTMANAGER_FEED_FIELD_NEWFEED_LABEL" description="COM_PODCASTMANAGER_FEED_FIELD_NEWFEED_DESCRIPTION" size="30" />
		<field name="image" type="media" hide_none="1" label="COM_PODCASTMANAGER_CONFIG_FIELD_ITIMAGE_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITIMAGE_DESCRIPTION" />
		<field name="category1" type="itunescategory" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_ITCATEGORY1_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITCATEGORY1_DESCRIPTION" size="1" />
		<field name="category2" type="itunescategory" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_ITCATEGORY2_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITCATEGORY2_DESCRIPTION" size="1" />
		<field name="category3" type="itunescategory" default="" label="COM_PODCASTMANAGER_CONFIG_FIELD_ITCATEGORY3_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITCATEGORY3_DESCRIPTION" size="1" />
		<field name="published" type="list" class="chzn-color-state" filter="intval" label="JSTATUS" description="COM_PODCASTMANAGER_FIELD_PUBLISHED_DESCRIPTION" size="1" default="1">
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
			<option value="-2">JTRASH</option>
		</field>
		<field name="block" type="radio" default="0" filter="intval" class="btn-group btn-group-yesno" label="COM_PODCASTMANAGER_FIELD_ITBLOCK_LABEL" description="COM_PODCASTMANAGER_CONFIG_FIELD_ITBLOCK_DESCRIPTION">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field name="explicit" type="radio" default="0" filter="intval" class="btn-group" label="COM_PODCASTMANAGER_FIELD_ITEXPLICIT_LABEL" description="COM_PODCASTMANAGER_FIELD_ITEXPLICIT_DESCRIPTION">
			<option value="0">JNO</option>
			<option value="1">JYES</option>
			<option value="2">COM_PODCASTMANAGER_FIELD_ITEXPLICIT_OPTION_CLEAN</option>
		</field>
		<field name="created" type="calendar" label="COM_PODCASTMANAGER_FIELD_CREATED_LABEL" description="COM_PODCASTMANAGER_FIELD_CREATED_DESCRIPTION" size="22" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<field name="created_by" type="user" label="JGLOBAL_FIELD_CREATED_BY_LABEL" description="JGLOBAL_FIELD_CREATED_BY_DESC" />
		<field name="modified" type="calendar" class="readonly" label="JGLOBAL_FIELD_MODIFIED_LABEL" description="COM_PODCASTMANAGER_FIELD_MODIFIED_DESCRIPTION" size="22" readonly="true" format="%Y-%m-%d %H:%M:%S" filter="user_utc" />
		<field name="modified_by" type="user" label="JGLOBAL_FIELD_MODIFIED_BY_LABEL" class="readonly" readonly="true" filter="unset" />
		<field name="checked_out" type="hidden" filter="unset" />
		<field name="checked_out_time" type="hidden" filter="unset" />
		<field name="language" type="contentlanguage" label="JFIELD_LANGUAGE_LABEL" description="COM_PODCASTMANAGER_FIELD_LANGUAGE_DESCRIPTION">
			<option value="*">JALL</option>
		</field>
        <field name="version_note" type="text" label="JGLOBAL_FIELD_VERSION_NOTE_LABEL" description="JGLOBAL_FIELD_VERSION_NOTE_DESC" class="span12" size="45" />
		<field id="rules" name="rules" type="rules" label="JFIELD_RULES_LABEL" translate_label="false" filter="rules" validate="rules" component="com_podcastmanager" section="feed" />
	</fieldset>
	<fields name="metadata">
		<fieldset name="jmetadata" label="JGLOBAL_FIELDSET_METADATA_OPTIONS">
			<field name="tags" type="tag" label="JTAG" description="JTAG_DESC" class="span12" multiple="true" />
		</fieldset>
	</fields>
</form>
